@using FreeCourse.Web.Models.Basket

@{
    ViewData["Title"] = "Checkout";
}

@model CheckoutInfoViewModel

<form asp-controller="Order" asp-action="Checkout" method="post">
    <div class="row">

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Adres bilgileri</h5>

                    <div class="mb-3">
                        <label class="form-label">İl</label>
                        <input asp-for="Province" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">İlçe</label>
                        <input asp-for="District" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cadde</label>
                        <input asp-for="Street" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Adres</label>
                        <input asp-for="Line" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Posta Kodu</label>
                        <input asp-for="ZipCode" class="form-control">
                    </div>
                    <hr />
                    <h5 class="card-title">Ödeme bilgileri</h5>
                    <div class="mb-3">
                        <label class="form-label">Kart Üstündeki İsim</label>
                        <input asp-for="CardName" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kart Numarası</label>
                        <input asp-for="CardNumber" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Son Kullanma Tarihi</label>
                        <input asp-for="Expiration" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CVV"></label>
                        <input asp-for="CVV" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ödeme özeti</h5>
                    <table class="table table-striped">
                        @foreach (var item in ViewBag.basket.BasketItem as List<BasketItemViewModel>)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.Price</td>
                            </tr>
                        }
                        <tr>
                            <td>@(ViewBag.basket.HasDiscount ? "İndirimli toplam fiyat" : "Toplam fiyat")</td>
                            <td>@ViewBag.basket.TotalPrice TL</td>
                        </tr>
                    </table>

                    <button type="submit" class="btn btn-success">Ödemeyi Tamamla</button>
                </div>
            </div>
        </div>
    </div>
</form>
